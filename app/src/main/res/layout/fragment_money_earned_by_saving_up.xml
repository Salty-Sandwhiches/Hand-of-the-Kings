<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.fragments.MoneyEarnedBySavingUpFragment">

    <ImageView
        android:id="@+id/fragment_money_earned_by_saving_up_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/fragment_money_earned_by_saving_up_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_money_earned_by_saving_up_title"/>

    <TextView
        android:id="@+id/fragment_money_earned_by_saving_up_title"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:text="180"
        android:textAlignment="center"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_money_earned_by_saving_up_image"
        app:layout_constraintBottom_toTopOf="@id/fragment_money_earned_by_saving_up_next"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/fragment_money_earned_by_saving_up_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Next"
        android:fontFamily="@font/game_of_thrones"
        android:textSize="35sp"
        android:textAlignment="center"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_money_earned_by_saving_up_title"
        android:gravity="center_horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>